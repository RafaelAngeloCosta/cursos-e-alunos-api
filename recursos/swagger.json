{
  "openapi": "3.0.0",
  "info": {
    "title": "Cursos e Alunos API",
    "version": "1.0.0",
    "description": "API para gerenciamento de cursos, alunos, funcionários e matrículas."
  },
  "paths": {
    "/funcionarios/registrar": {
      "post": {
        "summary": "Registrar funcionário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/FuncionarioInput" }
            }
          }
        },
        "responses": {
          "201": { "description": "Funcionário criado" },
          "400": { "description": "Funcionário já existe" }
        }
      }
    },
    "/funcionarios/login": {
      "post": {
        "summary": "Login funcionário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/LoginInput" }
            }
          }
        },
        "responses": {
          "200": { "description": "Token JWT" },
          "401": { "description": "Credenciais inválidas" }
        }
      }
    },
    "/alunos/registrar": {
      "post": {
        "summary": "Registrar aluno",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AlunoInput" }
            }
          }
        },
        "responses": {
          "201": { "description": "Aluno criado" },
          "400": { "description": "Aluno já existe" }
        }
      }
    },
    "/alunos/login": {
      "post": {
        "summary": "Login aluno",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/LoginInput" }
            }
          }
        },
        "responses": {
          "200": { "description": "Token JWT" },
          "401": { "description": "Credenciais inválidas" }
        }
      }
    },
    "/alunos/meus-cursos": {
      "get": {
        "summary": "Listar cursos do aluno logado",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Lista de cursos" },
          "403": { "description": "Acesso negado" }
        }
      }
    },
    "/cursos": {
      "post": {
        "summary": "Criar curso",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CursoInput" }
            }
          }
        },
        "responses": {
          "201": { "description": "Curso criado" },
          "400": { "description": "Curso já existe" },
          "403": { "description": "Acesso negado" }
        }
      },
      "get": {
        "summary": "Listar cursos",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Lista de cursos" }
        }
      }
    },
    "/cursos/{id}/ativar": {
      "patch": {
        "summary": "Ativar curso",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": {
          "200": { "description": "Curso ativado" },
          "404": { "description": "Curso não encontrado" },
          "403": { "description": "Acesso negado" }
        }
      }
    },
    "/cursos/{id}/desativar": {
      "patch": {
        "summary": "Desativar curso",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": {
          "200": { "description": "Curso desativado" },
          "400": { "description": "Curso vinculado a aluno, não pode ser desativado" },
          "404": { "description": "Curso não encontrado" },
          "403": { "description": "Acesso negado" }
        }
      }
    },
    "/matriculas": {
      "post": {
        "summary": "Matricular aluno em curso",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/MatriculaInput" }
            }
          }
        },
        "responses": {
          "201": { "description": "Matrícula criada" },
          "400": { "description": "Aluno já matriculado neste curso" },
          "404": { "description": "Aluno ou curso não encontrado" },
          "403": { "description": "Acesso negado" }
        }
      },
      "get": {
        "summary": "Listar matrículas",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Lista de matrículas" },
          "403": { "description": "Acesso negado" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "FuncionarioInput": {
        "type": "object",
        "properties": {
          "nome": { "type": "string" },
          "email": { "type": "string" },
          "senha": { "type": "string" }
        },
        "required": ["nome", "email", "senha"]
      },
      "AlunoInput": {
        "type": "object",
        "properties": {
          "nome": { "type": "string" },
          "email": { "type": "string" },
          "senha": { "type": "string" }
        },
        "required": ["nome", "email", "senha"]
      },
      "LoginInput": {
        "type": "object",
        "properties": {
          "nome": { "type": "string" },
          "senha": { "type": "string" }
        },
        "required": ["nome", "senha"]
      },
      "CursoInput": {
        "type": "object",
        "properties": {
          "nome": { "type": "string" },
          "descricao": { "type": "string" },
          "tempo": { "type": "string" },
          "ativo": { "type": "boolean" }
        },
        "required": ["nome", "descricao", "tempo"]
      },
      "MatriculaInput": {
        "type": "object",
        "properties": {
          "alunoId": { "type": "integer" },
          "cursoId": { "type": "integer" }
        },
        "required": ["alunoId", "cursoId"]
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
